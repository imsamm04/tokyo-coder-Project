extends ../layouts/common.pug

block content
    span.mr-3 Users
    a.btn.btn-primary(href="/users/create") New 

    .d-flex.align-items-center
       

       form.ml-auto(action="/users/search", method = "GET")
          input(type="text", NAME = "q")
          button(class = "btn btn-primary ml-2") Search
    table.table
      tr
        th Name
        th Phone
        th Actions
        each user in users
          tr
            td= user.name
            td= user.phone
           
            td
              a.btn.btn-success(href='/users/' + user.id) View
